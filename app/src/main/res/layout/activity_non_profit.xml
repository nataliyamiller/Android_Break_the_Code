<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.breakthecode.ui.NonProfitActivity"
    android:id="@+id/nonProfitLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/partnerImage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_camp_for_girls"
        android:minHeight="300dp"
        android:minWidth="300dp"
        android:maxWidth="500dp"
        android:maxHeight="500dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Camp for Girls"
        android:id="@+id/nameLabel"
        android:layout_below="@+id/partnerImage"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Camp For Girls is a place where girls can put their creative powers to work, designing and building apps, while learning more about the business of software and being inspired by women mentors in the field.  "
        android:id="@+id/descriptionLabel"
        android:layout_below="@+id/nameLabel"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Partner"
        android:id="@+id/nextButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_marginTop="50dp"
        style="@style/Widget.AppCompat.Light.ActionBar.Solid"
        android:gravity="center|center_horizontal"
        android:nestedScrollingEnabled="false"
        android:textAlignment="center"
        android:textAppearance="@drawable/abc_list_selector_holo_light"
        android:height="70dp"
        android:width="300dp"
        android:longClickable="true"
        android:textSize="24sp" />
</RelativeLayout>
